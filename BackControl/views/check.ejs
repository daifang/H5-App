    <title>账号激活</title>
</head>
<body>
    <div id = 'container'>
            <ul style="margin-left:30%;width:30%;">
                <li id='time'>正在激活 · · · </li>
            </ul>
    </div>
<script>
    var arr = ['正在激活 · · ·','正在激活 · ·','正在激活 ·'];
    var i = 0; 
    let time = setInterval(() => {
        if(document.getElementById('time').innerHTML === 0){
            clearInterval(time);
            return 0;
        }
        if(i === 3)
            i=0;
        document.getElementById('time').innerHTML = arr[i];
        i++;
    }, 1000);
</script>
</body>

